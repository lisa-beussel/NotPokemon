<Page x:Class="NotPokemon.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NotPokemon"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      Title="MainMenu">

    <Grid Background="Black">
        <StackPanel VerticalAlignment="Bottom">
            <Image Source="Assets/title.png" Width="500"></Image>
            <Button Background="AliceBlue" Cursor="Hand" Width="200" Height="40" Margin="0, 5, 0, 5" x:Name="gotogame" Click="gotogame_Click" FontFamily="Segoe Print" FontSize="20">Game</Button>
            <Button Background="AliceBlue" Cursor="Hand" Width="200" Height="40" Margin="0, 5, 0, 5" x:Name="gotodb" Click="gotodb_Click" FontFamily="Segoe Print" FontSize="20">Monsters</Button>
            <Button Background="AliceBlue" Cursor="Hand" Width="200" Height="40" Margin="0, 5, 0, 70" x:Name="quit" Click="quit_Click" FontFamily="Segoe Print" FontSize="20">Quit</Button>
        </StackPanel>
    </Grid>
</Page>
